<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FEF3C7" />
            <size android:width="56dp" android:height="56dp" />
        </shape>
    </item>
    
    <!-- Pie chart segments -->
    <item android:top="14dp" android:bottom="14dp" android:left="14dp" android:right="14dp">
        <rotate
            android:fromDegrees="0"
            android:toDegrees="0"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="oval">
                <stroke android:width="4dp" android:color="#F59E0B" />
            </shape>
        </rotate>
    </item>
</layer-list>
