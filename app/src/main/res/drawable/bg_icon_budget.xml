<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#E3F2FD"/>
            <size android:width="56dp" android:height="56dp"/>
        </shape>
    </item>

    <!-- Outer rectangle (wallet body) -->
    <item
        android:top="16dp"
        android:bottom="16dp"
        android:left="13dp"
        android:right="13dp">
        <shape android:shape="rectangle">
            <solid android:color="#1565C0"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>

    <!-- Inner cutout / card slot (lighter rectangle) -->
    <item
        android:top="22dp"
        android:bottom="22dp"
        android:left="28dp"
        android:right="15dp">
        <shape android:shape="rectangle">
            <solid android:color="#E3F2FD"/>
            <corners android:radius="3dp"/>
        </shape>
    </item>

    <!-- Coin circle on card slot -->
    <item
        android:top="24dp"
        android:bottom="24dp"
        android:left="31dp"
        android:right="31dp">
        <shape android:shape="oval">
            <solid android:color="#1565C0"/>
        </shape>
    </item>

</layer-list>